{
    "tasks": [
        {
            "label": "build fraX",
            "type": "cppbuild",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                // Presettings
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++20",
                //"-Wl,-subsystem,windows", console

                // Includes
                "-I${VULKAN_SDK}/Include",
                "-I${workspaceFolder}/dependencies/include",

                // File
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/gapi/*.cpp",
                "${workspaceFolder}/src/window/*.cpp",
                "${workspaceFolder}/dependencies/include/vkbootstrap/*.cpp",

                // Libraries
                "-L${VULKAN_SDK}/Lib",
                "-L${workspaceFolder}/dependencies/lib/glfw",

                // Additinal dependencies
                "-lglfw3",
                "-lvulkan-1",

                // Output
                "-o",
                "${workspaceFolder}/build/fraX.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}